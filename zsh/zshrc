ZSH=$HOME/.oh-my-zsh

ZSH_THEME="candy"

POWERLINE_FULL_CURRENT_PATH="true"
POWERLINE_RIGHT_B=""
POWERLINE_RIGHT_A="exit-status"
POWERLINE_SHOW_GIT_ON_RIGHT="true"
POWERLINE_HIDE_USER_NAME="true"
POWERLINE_NO_BLANK_LINE="true"
POWERLINE_DETECT_SSH="true"

# Set to this to use case-sensitive completion
# CASE_SENSITIVE="true"

# Comment this out to disable bi-weekly auto-update checks
# DISABLE_AUTO_UPDATE="true"

# Uncomment to change how often before auto-updates occur? (in days)
# export UPDATE_ZSH_DAYS=13

# Uncomment following line if you want to disable colors in ls
# DISABLE_LS_COLORS="true"

# Uncomment following line if you want to disable autosetting terminal title.
# DISABLE_AUTO_TITLE="true"

# Uncomment following line if you want to disable command autocorrection
# DISABLE_CORRECTION="true"

# Uncomment following line if you want red dots to be displayed while waiting for completion
# COMPLETION_WAITING_DOTS="true"

# Uncomment following line if you want to disable marking untracked files under
# VCS as dirty. This makes repository status check for large repositories much,
# much faster.
# DISABLE_UNTRACKED_FILES_DIRTY="true"

ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets pattern cursor root)
plugins=(brew git git-extras github mix-fast svn osx ssh-agent tmux vagrant zsh-syntax-highlighting vi-mode)

typeset -U path

source $ZSH/oh-my-zsh.sh

export PATH=/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin:/opt/X11/bin
path+=(~/bin)

export LANG=en_US.UTF-8
export LC_TIME=en_GB.UTF-8
export LC_PAPER=en_GB.UTF-8
export LC_MEASUREMENT=en_GB.UTF-8

export EDITOR="/usr/bin/nvim"
export PAGER="/usr/bin/less"

export BLOCKSIZE=human-readable

alias zshconfig="nvim ~/.zshrc"
alias ohmyzsh="nvim ~/.oh-my-zsh"

alias m="make"
alias mj="make -j $(nproc)"
alias g="git"
alias vim="nvim"
alias v="nvim"

alias myip='dig +short myip.opendns.com @resolver1.opendns.com'

# ping network
function pn() {
    if [ $# -eq 0 ]; then
        ping google.com
    else
        ping "$@"
    fi
}

unsetopt hist_verify
bindkey -v

export VAGRANT_HOME=~/VM/vagrant
export TERMINFO=~/.terminfo

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
[ -f ~/.kerlrc ] && source ~/.kerlrc &&
    . $KERL_DEFAULT_VERSION_DIR/19.1.5/activate
[ -f ~/.kiex/scripts/kiex ] && source ~/.kiex/scripts/kiex &&
    source ~/.kiex/elixirs/elixir-1.4.0-rc.1.env

eval "$(direnv hook zsh)"
