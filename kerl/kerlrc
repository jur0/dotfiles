export KERL_BASE_DIR=~/.kerl
export KERL_DEFAULT_INSTALL_DIR=$KERL_BASE_DIR/installs
export KERL_DEFAULT_VERSION_DIR=$KERL_BASE_DIR/versions
export KERL_BUILD_BACKEND=git
export KERL_CONFIGURE_OPTIONS="
    --enable-m64-build
    --enable-threads
    --enable-smp-support
    --enable-kernel-poll
    --enable-hipe
    --enable-sctp
    --enable-dirty-schedulers
    --enable-gettimeofday-as-os-system-time
    --enable-shared-zlib
    --enable-dynamic-ssl-lib
    --with-ssl
    --with-termcap
    --without-javac"
export KERL_CONFIGURE_DISABLE_APPLICATIONS="odbc"
export KERL_BUILD_DOCS=yes
export KERL_INSTALL_MANPAGES=yes
